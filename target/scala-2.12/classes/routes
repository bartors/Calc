# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)

# The calculator for Ardoq
GET     /calculator                 controllers.CalculatorController.index
# Get input for the calculator
GET /calculator/:s                  controllers.CalculatorController.calculator(s:String)

# Get operations history from calculator
GET /operation                 controllers.CalculatorController.operation()
# Get operations history from calculator
GET /result                controllers.CalculatorController.result()
# Get operations history from calculator
GET /reset                controllers.CalculatorController.reset()
# Clear memory in calc
GET /clear              controllers.CalculatorController.clear()